<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.product.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/products/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProductByCategoryIdServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.product.ListProductByCategoryIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductByCategoryIdServlet</servlet-name>
        <url-pattern>/products/listCatId</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/categories/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.restaurant.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/categories/create</url-pattern>
    </servlet-mapping>
</web-app>